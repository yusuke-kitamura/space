<div class = "title-top">
    <h2>オーナーログイン</h2>
</div><br>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row-form">
        <%= f.label :email, "メールアドレス"%><br>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-lg-6"%>
    </div><br>
    <div class="row-form">
        <%= f.label :password, "パスワード" %><br>
        <%= f.password_field :password, autocomplete: "current-password", class: "col-lg-6" %>
    </div><br>

  <% if devise_mapping.rememberable? %>
    <div class="row-form">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "パスワードを保存する" %>
    </div><br>
  <% end %>

  <div class="row-action">
      <%= f.submit "ログイン", class: "btn btn-flat-double-border col-lg-4" %>
  </div><br>
<% end %>

<div class = "row-form">
        <%= render "owners/shared/links" %>
</div>
