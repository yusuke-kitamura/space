<div class = "title-top">
  	<h2>パスワードを忘れましたか？</h2>
</div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="row-form">
  		<%= f.label :email, "メールアドレス" %><br>
  		<%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-lg-6" %></div><br>

  <div class="row-action">
    <%= f.submit "パスワードを再発行", class: "btn btn-flat-double-border col-lg-4" %>
  </div>
<% end %>

