<h2>サロンを掲載する</h2>
<%= form_with model: @salon, url: {controller: 'owner/salons', action: 'create'}, lacal: true do |f| %>
	<div>
		<%= f.attachment_field :salon_image %>
	</div><br>

	<div class = "row">
		<%= f.label :salon_name, "サロン名", class: "col-md-1" %>
		<%= f.text_field :salon_name, class: "col-md-2" %>
	</div><br>

	<div class = "row">
		<%= f.label :postal_code, "郵便番号", class: "col-md-1" %>
		<%= f.text_field :postal_code, class: "col-md-2" %>
	</div><br>

	<div class = "row">
		<%= f.label :prefecture_code, "都道府県", class: "col-md-1" %>
		<%= f.select :prefecture_code, options_for_select(Salon.prefecture_codes), {}, class: 'col-md-1' %>
	</div><br>

	<div class = "row">
		<%= f.label :address, "市町村", class: "col-md-1"%>
		<%= f.text_field :address, class: "col-md-2" %>
	</div><br>

	<div class = "row">
		<%= f.label :seat_number, "貸出可能席数", class: "col-md-1" %>
		<%= f.text_field :seat_number, class: "col-md-2" %>
	</div><br>

	<div class = "row">
		<%= f.label :price, "価格(1ヶ月)", class: "col-md-1" %>
		<%= f.text_field :price, class: "col-md-2" %>
	</div><br>

	<div class = "row">
		<%= f.label :explanation, "その他詳細", class: "col-md-1" %>
		<%= f.text_area :explanation, class: "col-md-2" %>
	</div>

	<div class = "row">
	<%= f.submit "掲載する", class: "btn btn-primary" %>
	</div><br>

<% end %>

<h2>掲載中のサロン一覧</h2>

<table>
  <% @salons.each do |salon| %>
  	<tr>
  		<td><%= attachment_image_tag salon, :salon_image, format: 'jpg' %></td>
  	</tr>

	<tr>
		<td><%=link_to salon.salon_name, owner_salon_path(salon) %></td>
	</tr>

	<tr>
		<td>住所:〒<%= salon.postal_code %><%= salon.prefecture_code %><%= salon.address %></td>
	</tr>

	<tr>
		<td>値段:<%= salon.price %></td>
	</tr>

	<tr>
		<td>その他:<%= salon.explanation %></td>
	</tr>
  <% end %>
</table>