<div class = "title-top">
	<h2>サロンを掲載する</h2>
</div>

<%= form_with model: @salon, url: {controller: 'owner/salons', action: 'create'}, local: true do |f| %>


<%= f.hidden_field :owner_id, value: current_owner.id %>
	<div class = "row-form">
		<%= f.attachment_field :salon_image %>
	</div><br>

	<div class = "row-form">
		<%= f.label :salon_name, "サロン名" %><br>
		<%= f.text_field :salon_name, class: "col-lg-6" %>
	</div><br>

	<div class = "row-form">
		<%= f.label :postal_code, "郵便番号" %><br>
		<%= f.text_field :postal_code, class: "col-lg-6" %>
	</div><br>

	<div class = "row-form">
		<%= f.label :prefecture_code, "都道府県" %><br>
		<%= f.select :prefecture_code, options_for_select(Salon.prefecture_codes), {}, class: 'col-lg-6' %>
	</div><br>

	<div class = "row-form">
		<%= f.label :address, "市町村" %><br>
		<%= f.text_field :address, class: "col-lg-6" %>
	</div><br>

	<div class = "row-form">
		<%= f.label :station, "最寄り駅" %><br>
		<%= f.text_field :station, class: "col-lg-6" %>
	</div><br>

	<div class = "row-form">
		<%= f.label :seat_number, "貸出可能席数" %><br>
		<%= f.text_field :seat_number, class: "col-lg-6" %>
	</div><br>

	<div class = "row-form">
		<%= f.label :price, "価格(1ヶ月)" %><br>
		<%= f.text_field :price, class: "col-lg-6" %>
	</div><br>

	<div class = "row-form">
		<%= f.label :explanation, "その他詳細" %><br>
		<%= f.text_area :explanation, class: "col-lg-6" %>
	</div><br>

	<div class = "row-action">
		<%= f.submit "掲載する", class: "btn btn-flat-double-border col-lg-6 col-7" %>
	</div><br>

<% end %>

<div class = "title-top">
	<h2>掲載中のサロン一覧</h2>
</div>

<div class="row row-cols-lg-3 row-cols-1">
  <% @salons.each do |salon| %>
      <div class="card border-dark">
        <%= attachment_image_tag salon, :salon_image, format: 'jpg', class: "salon-img offset-lg-1" %>
          <div class="card-body offset-2">
            <h3 class="card-title"><%=link_to salon.salon_name, owner_salon_path(salon) %></h3><hr>
            <p class="card-text"><i class="fas fa-store"></i>住所:〒<%= salon.postal_code %><%= salon.prefecture_code %><%= salon.address %></p><hr>
            <p><i class="fas fa-train"></i>最寄り駅:<%= salon.station %></p><hr>
            <p><i class="fas fa-yen-sign"></i>値段(月極):<%= salon.price %></p><hr>
            <p><i class="fas fa-chair"></i>貸出座席数:<%= salon.seat_number %></p><hr>
            <p>その他:<%= salon.explanation %></p>
          </div>
      </div>
  <% end %>
</div>


