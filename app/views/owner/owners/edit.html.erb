<div class = "row">
<h1 class = "offset-2">オーナー情報</h1>
</div><br>

<%= form_with model: @owner, url: {controller: 'owner/owners', action: 'update' },lacal: true do |f| %>
	<div class = "row">
    <label class = "col-md-1 offset-2"><%= f.label :name, "担当者様名" %></label>
    <%= f.text_field :name, class: "col-md-6" %>
	</div><br>

	<div class = "row">
    <label class = "col-md-1 offset-2"><%= f.label :email, "メールアドレス" %></label>
    <%= f.email_field :email, class: "col-md-6" %>
	</div><br>

	<div class = "row">
	<%= f.submit "変更する", class: "btn btn-info col-md-2 offset-5" %>
	</div>
<% end %>