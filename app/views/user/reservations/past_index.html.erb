<div class = "row">
	<h1 class = "offset-5">過去の予約サロン一覧</h1>
</div>

<table class="table table-striped">
	<% if @reservations.blank? %>
		<div class = "row">
			<div class = "offset-5">予約履歴はありません。</div>
		</div>
	<% end %>

<% @reservations.each do |reservation| %>
	<tr class = "row row-cols-lg-3 row-cols-xs-1">
  		<td class = "col-md-2 offset-2"><%= attachment_image_tag reservation.salon, :salon_image, format: 'jpg', size: "400x400" %></td>
  	
		<td class = "col-md-3 offset-2">
			<strong><%= link_to reservation.salon.salon_name, user_salon_path(reservation.salon) %></strong>
			<p>住所:〒<%= reservation.salon.postal_code %><%= reservation.salon.prefecture_code %><%= reservation.salon.address %></p>
			<p>最寄り駅:<%= reservation.salon.station %></p>
			<p>値段:<%= reservation.salon.price %></p>
			<p>貸出座席数:<%= reservation.salon.seat_number %></p>
			<p>その他:<%= reservation.salon.explanation %></p>
			<p>予約時間:<%= reservation.date.strftime("%Y年%m月%d日%H時%M分") %></p>
		</td>
	</tr>
<% end %>
</table>