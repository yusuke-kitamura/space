<%= stylesheet_link_tag 'members' %>

<h2>マイページ</h2>

<caption><%= current_user.name %>さんの会員情報</caption>
<table>
	<tr>
		<th>氏名</th>
		<td>current_user.name</td>
	</tr>

	<tr>
		<th>フリガナ</th>
		<td>current_user.kana_name</td>
	</tr>

	<tr>
		<th>メールアドレス</th>
		<td>current_user.email</td>
	</tr>

	<tr>
		<th>郵便番号</th>
		<td>current_user.postal_code</td>
	</tr>

	<tr>
		<th>住所</th>
		<td>current_user.address</td>
	</tr>
</table>

<%= link_to "スペースを探す", "#", class: "btn btn-primary" %>
<%= link_to "編集する", "#", class: "btn btn-primary" %>