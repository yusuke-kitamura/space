<div class = "row">
	<h2 class = "col-md-4 offset-4"><%= current_user.name %>さんのアカウント情報</h2>
</div>

<%= form_with model: @user, url: {controller: 'user/users', action: 'update' },lacal: true do |f| %>
	<div class = "row">
    <label class = "col-md-1 offset-2"><%= f.label :name, "名前" %></label>
    <%= f.text_field :name, class: "col-md-6" %>
	</div><br>

	<div class = "row">
    <label class = "col-md-1 offset-2"><%= f.label :kana_name, "フリガナ" %></label>
    <%= f.text_field :kana_name, class: "col-md-6" %>
	</div><br>

	<div class = "row">
    <label class = "col-md-1 offset-2"><%= f.label :email, "メールアドレス" %></label>
    <%= f.email_field :email, class: "col-md-6" %>
	</div><br>

	<div class = "row">
    <label class = "col-md-1 offset-2"><%= f.label :phone_number, "電話番号" %></label>
    <%= f.text_field :phone_number, class: "col-md-6" %>
	</div><br>

	<div class = "row">
	<%= f.submit "変更する", class: "btn btn-flat-double-border col-md-2 offset-5" %>
	</div>
<% end %>