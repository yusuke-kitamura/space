<div class = "row">
  <h2 class = "offset-3">パスワードを忘れましたか？</h2>
</div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="row"><%= f.label :email, "メールアドレス", class: "offset-3" %></div>
  <div class="row"><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-md-4 offset-3" %></div><br>

  <div class="row-actions">
    <%= f.submit "パスワードを再発行", class: "btn btn-info col-md-4 offset-3" %>
  </div>
<% end %>


